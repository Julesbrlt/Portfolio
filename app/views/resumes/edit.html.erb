<div class="row justify-content-center mt-5">
  <div class="col-md-8 col-lg-6">
    <div class="card shadow-sm p-4">
      <%= simple_form_for @resume, html: { multipart: true } do |f| %>
        <%= f.input :title, label: "Titre du CV" %>
        <%= f.input :summary, as: :text, label: "Résumé / Introduction" %>
        <%= f.input :pdf, as: :file, label: "Upload ton CV!" %>
        <div class="text-center mt-4">
          <%= f.button :submit, "Mettre à jour", class: "btn btn-primary me-2" %>
          <%= link_to "Annuler", resume_path, class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
