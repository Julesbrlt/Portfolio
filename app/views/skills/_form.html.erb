<%= simple_form_for @skill do |f| %>
  <%= f.input :name, label: "Ruby / JS" %>
  <%= f.input :category, label: "Adobe / Dev" %>
  <%= f.input :level, label: "Débutant / Avancé" %>

  <div class="text-center mt-4">
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= link_to "Annuler", resume_path, class: "btn btn-outline-secondary ms-2" %>
  </div>
<% end %>
