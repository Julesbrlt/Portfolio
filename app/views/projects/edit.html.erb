<div class="container my-5">
  <h1 class="text-center mb-4">✏️ Modifier le projet</h1>
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-sm p-4">
        <%= simple_form_for @project do |f| %>
          <%= f.input :title, label: "Titre du projet" %>
          <%= f.input :description, as: :text, label: "Description" %>
          <%= f.input :github_url, label: "Lien GitHub" %>
          <%= f.input :demo_url, label: "Lien Démo (optionnel)" %>
          <%= f.input :image_url, label: "Image (URL)" %>
          <div class="text-center mt-4">
            <%= f.button :submit, "Mettre à jour", class: "btn btn-warning me-2" %>
            <%= link_to "Annuler", project_path(@project), class: "btn btn-outline-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
